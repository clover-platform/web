{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "apps/main/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "builder": "tsc",
        "tsConfigPath": "apps/main/tsconfig.app.json",
        "assets": [
            {
                "include": "i18n/**/*",
                "watchAssets": true,
                "outDir": "dist/apps/main/src/"
            }
        ]
    },
    "monorepo": true,
    "root": "apps/main",
    "projects": {
        "server": {
            "type": "application",
            "root": "apps/main",
            "entryFile": "main",
            "sourceRoot": "apps/main/src",
            "compilerOptions": {
                "tsConfigPath": "apps/main/tsconfig.app.json"
            }
        },
        "common": {
            "type": "library",
            "root": "libs/common",
            "entryFile": "index",
            "sourceRoot": "libs/common/src",
            "compilerOptions": {
                "tsConfigPath": "libs/common/tsconfig.lib.json"
            }
        },
        "config": {
            "type": "library",
            "root": "libs/config",
            "entryFile": "index",
            "sourceRoot": "libs/config/src",
            "compilerOptions": {
                "tsConfigPath": "libs/config/tsconfig.lib.json"
            }
        },
        "public": {
            "type": "library",
            "root": "libs/public",
            "entryFile": "index",
            "sourceRoot": "libs/public/src",
            "compilerOptions": {
                "tsConfigPath": "libs/public/tsconfig.lib.json"
            }
        },
        "auth": {
            "type": "library",
            "root": "libs/auth",
            "entryFile": "index",
            "sourceRoot": "libs/auth/src",
            "compilerOptions": {
                "tsConfigPath": "libs/auth/tsconfig.lib.json"
            }
        },
        "account": {
            "type": "library",
            "root": "libs/account",
            "entryFile": "index",
            "sourceRoot": "libs/account/src",
            "compilerOptions": {
                "tsConfigPath": "libs/account/tsconfig.lib.json"
            }
        }
    }
}
