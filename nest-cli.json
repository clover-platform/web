{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "packages/server/src",
    "compilerOptions": {
        "deleteOutDir": true,
        "webpack": true,
        "tsConfigPath": "packages/server/tsconfig.app.json"
    },
    "monorepo": true,
    "root": "packages/server",
    "projects": {
        "server": {
            "type": "application",
            "root": "packages/server",
            "entryFile": "main",
            "sourceRoot": "packages/server/src",
            "compilerOptions": {
                "tsConfigPath": "packages/server/tsconfig.app.json"
            }
        },
        "common": {
            "type": "library",
            "root": "packages/common",
            "entryFile": "index",
            "sourceRoot": "packages/common",
            "compilerOptions": {
                "tsConfigPath": "packages/common/tsconfig.lib.json"
            }
        }
    }
}
